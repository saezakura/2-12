<h1>Books</h1>

<% @books.each do |book| %>
<!--title-->
 <span><%= book.title %></span>
<!--body-->
 <span><%= book.body %></span>
<% end %>

<h1>New book</h1>

 <%= form_with model:@book, local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'create Book' %>
 <% end %>